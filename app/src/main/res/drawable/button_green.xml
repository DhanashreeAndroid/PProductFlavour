<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="2dp" android:right="2dp" android:top="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFCC3D" />
                    <corners android:radius="4dp" />
                    <stroke android:width="1dip" android:color="#FF3D38" />

                    <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="6dp" />

                    <!--<padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="6dp" />-->

                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>

            <item >
                <shape android:shape="rectangle">
                    <solid android:color="#ffffff" />
                    <corners android:radius="4dp"/>
                    <stroke android:width="1dip" android:color="#000000" />
                    <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>