<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:bottom="4dp" android:left="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFCC3D" />
            <stroke android:width="1dip" android:color="#FF3D38" />
            <corners android:radius="4dp"/>
            <padding android:bottom="8dp" android:left="8dp" android:right="6dp" android:top="6dp" />

        </shape>
    </item>
    <item>
        <bitmap
            android:gravity="end"
            android:src="@drawable/icon_arrow" />
    </item>

</layer-list>