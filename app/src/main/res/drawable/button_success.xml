<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <item android:bottom="2dp"  android:top="2dp" android:right="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#c4049938" />
                    <corners android:radius="4dp"/>
                    <stroke android:width="1dip" android:color="#049938" />

                    <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="6dp" />

                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <item android:bottom="2dp" android:right="2dp" android:top="2dp">
                <shape android:shape="rectangle">

                    <corners android:radius="4dp" />
                    <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="6dp" />

                    <gradient
                        android:angle="90"
                        android:startColor="#c05fd186"
                        android:endColor="#51be77"
                        android:type="linear"/>

                    <stroke android:width="1dip" android:color="#026c27" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>