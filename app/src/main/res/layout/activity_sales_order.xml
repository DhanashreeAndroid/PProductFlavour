<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:fillViewport="false"
    android:focusable="true"
    android:background="@android:color/white"
    tools:context="com.salescube.healthcare.demo.SalesOrderActivity"
    android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/ActivityHeader"
                android:text="Sales Order"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:background="@drawable/border_gray"
                android:padding="8dp"
                android:textColor="@color/heading_text_color" />-->

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/order_tblShop"
                android:layout_marginTop="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false">

                    <TextView
                        android:textAppearance="@style/MyLabel"
                        android:text="Date:"
                        android:id="@+id/textView7"
                        android:layout_column="0"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_weight="0"
                        android:background="@drawable/border_label" />

                    <Spinner
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/order_spn_orderDate"
                        android:layout_column="1"
                        android:layout_weight="1"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:spinnerMode="dialog"
                        android:background="@drawable/spinner_simple" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textAppearance="@style/MyLabel"
                        android:text="City:"
                        android:id="@+id/textView8"
                        android:layout_column="0"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:background="@drawable/border_label" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ord_spn_agent"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:spinnerMode="dialog"
                        android:background="@drawable/spinner_simple" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="@style/MyLabel"
                        android:text="Route:"
                        android:id="@+id/textView11"
                        android:layout_column="0"
                        android:gravity="center_vertical"
                        android:background="@drawable/border_label" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ord_spn_route"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:spinnerMode="dialog"
                        android:background="@drawable/spinner_simple" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textAppearance="@style/MyLabel"
                        android:text="Locality:"
                        android:id="@+id/textView9"
                        android:layout_column="0"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:background="@drawable/border_label" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ord_spn_locality"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:spinnerMode="dialog"
                        android:background="@drawable/spinner_simple" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textAppearance="@style/MyLabel"
                        android:text="Shop:"
                        android:id="@+id/textView10"
                        android:layout_column="0"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_label" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ord_spn_shop"
                        android:layout_column="1"
                        android:layout_weight="1"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:spinnerMode="dialog"
                        android:paddingLeft="10dp"
                        android:background="@drawable/spinner_simple" />

                    </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:text="New Order"
                        android:id="@+id/ord_btn_new_order"
                        android:layout_column="0"
                        android:layout_weight="1"
                        tools:text="ORDER"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:background="@drawable/button_simple"
                        android:textColorHighlight="@color/btnColor"
                        android:textColor="@color/btnColor" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="NO ORDER"
                        android:id="@+id/ord_btn_no_order"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:background="@drawable/button_simple"
                        android:textColor="@color/btnColor"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="SALES\nRETURN"
                        android:id="@+id/ord_btn_return"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:background="@drawable/button_simple"
                        android:textColor="@color/btnColor"/>

                    <Button
                        android:text="Stock"
                        android:id="@+id/ord_btn_stock_order"
                        android:layout_column="0"
                        android:layout_weight="1"
                        tools:text="STOCK"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:background="@drawable/button_simple"
                        android:textColorHighlight="@color/btnColor"
                        android:textColor="@color/btnColor" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="COMPLAINT"
                        android:id="@+id/ord_btn_complaint"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:background="@drawable/button_simple"
                        android:textColor="@color/btnColor"/>

                    <Button
                        android:text="Previous Order"
                        android:id="@+id/order_btn_lastOrder"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:background="@drawable/button_simple"
                        android:textColor="@color/btnColor"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="POP"
                        android:id="@+id/order_btn_pop"
                        android:layout_column="2"
                        android:layout_weight="1"
                        android:background="@drawable/button_simple"
                        android:textColor="@color/btnColor" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Competitor Info."
                        android:id="@+id/order_btn_competitor"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:background="@drawable/button_simple"
                        android:textColor="@color/btnColor" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Add Shop"
                        android:id="@+id/order_btn_shop_add"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:background="@drawable/button_simple"
                        android:textColor="@color/btnColor" />

                    <Button
                        android:text="Edit Shop"
                        android:layout_width="0dp"
                        android:layout_column="2"
                        android:layout_height="wrap_content"
                        android:id="@+id/order_btn_edit_shop"
                        android:background="@drawable/button_simple"
                        android:layout_weight="1"
                        android:textColor="@color/btnColor" />



                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/order_tbl_target_head"
                android:layout_marginTop="10dp">

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/order_tbl_target_data">

            </TableLayout>

        </LinearLayout>

    </ScrollView>


