<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.salescube.healthcare.demo.ComplaintActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

          <!--  <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Complaint Form"
                android:textAlignment="center"
                android:textAppearance="@style/LabelHead"
                android:textSize="24sp" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/layout_border_gray"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView3"
                    style="@style/SpinnerLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Reported By"/>

                <Spinner
                    android:id="@+id/complaint_spn_reported_by"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="0dp"
                    android:spinnerMode="dialog" />


                <TextView
                    android:id="@+id/complaint_lbl_agent"
                    style="@style/SpinnerLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Agent Name" />

                <Spinner
                    android:id="@+id/complaint_spn_agent"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="0dp"
                    android:spinnerMode="dialog" />

                <TextView
                    android:id="@+id/complaint_lbl_area"
                    style="@style/SpinnerLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Area Name" />

                <Spinner
                    android:id="@+id/complaint_spn_area"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="0dp"
                    android:spinnerMode="dialog" />


                <TextView
                    android:id="@+id/complaint_lbl_route"
                    style="@style/SpinnerLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Route Name" />

                <Spinner
                    android:id="@+id/complaint_spn_route"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="0dp"
                    android:spinnerMode="dialog" />

                <TextView
                    android:id="@+id/complaint_lbl_locality"
                    style="@style/SpinnerLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Locality Name" />

                <Spinner
                    android:id="@+id/complaint_spn_locality"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="0dp"
                    android:spinnerMode="dialog" />

                <TextView
                    android:id="@+id/complaint_lbl_shop"
                    style="@style/SpinnerLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Shop Name" />

                <Spinner
                    android:id="@+id/complaint_spn_shop"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="0dp"
                    android:spinnerMode="dialog" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:hintTextAppearance="@style/SpinnerLabel">

                    <EditText
                        android:id="@+id/complaint_txt_customer_name"
                        style="@style/TextEditStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:hint="Person Name"
                        android:inputType="textCapWords"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:hintTextAppearance="@style/SpinnerLabel">

                    <EditText
                        android:id="@+id/complaint_txt_contact_number"
                        style="@style/TextEditStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:hint="Contact Number"
                        android:maxLength="12"
                        android:inputType="number" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/complaint_lay_place"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    app:hintTextAppearance="@style/SpinnerLabel">

                    <EditText
                        android:id="@+id/complaint_txt_place"
                        style="@style/TextEditStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:hint="Place"
                        android:inputType="textCapWords" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/layout_border_gray"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    style="@style/SpinnerLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Product" />

                <Spinner
                    android:id="@+id/complaint_spn_product"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="0dp"
                    android:spinnerMode="dialog" />

                <TextView
                    style="@style/SpinnerLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Sku" />

                <Spinner
                    android:id="@+id/complaint_spn_product_sku"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="0dp"
                    android:spinnerMode="dialog" />


                <TextView
                    style="@style/SpinnerLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Complaint About" />

                <Spinner
                    android:id="@+id/complaint_spn_complaint_about"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="0dp"
                    android:spinnerMode="dialog" />


                <TextView
                    android:id="@+id/complaint_lbl_criteria"
                    style="@style/SpinnerLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Issue" />

                <Spinner
                    android:id="@+id/complaint_spn_criteria"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="0dp"
                    android:spinnerMode="dialog" />

                <TextView
                    android:id="@+id/complaint_lbl_complaint"
                    style="@style/SpinnerLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Complaint" />

                <Spinner
                    android:id="@+id/complaint_spn_complaint"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="0dp"
                    android:spinnerMode="dialog" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/complaint_lay_otherComplaint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    app:hintTextAppearance="@style/SpinnerLabel">

                    <EditText
                        android:id="@+id/complaint_txt_otherComplaint"
                        style="@style/TextEditStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Other Complaint"
                        android:inputType="textCapSentences"
                        android:minLines="2" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/complaint_lay_batch_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    app:hintTextAppearance="@style/SpinnerLabel">

                    <EditText
                        android:id="@+id/complaint_txt_batch_no"
                        style="@style/TextEditStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Batch No."
                        android:inputType="textCapCharacters"
                        android:minLines="2" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/complaint_lay_qty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    app:hintTextAppearance="@style/SpinnerLabel">

                    <EditText
                        android:id="@+id/complaint_txt_qty"
                        style="@style/TextEditStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Quantity"
                        android:inputType="number"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    app:hintTextAppearance="@style/SpinnerLabel">

                    <EditText
                        android:id="@+id/complaint_txt_remark"
                        style="@style/TextEditStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Remark"
                        android:inputType="textCapSentences"
                        android:minLines="2" />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/complaint_btn_add_photo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_normal"
                    android:text="Add Photo" />

                <Button
                    android:id="@+id/complaint_btn_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_success"
                    android:text="Submit" />
            </LinearLayout>

            <ImageView
                android:id="@+id/complaint_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitStart" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
