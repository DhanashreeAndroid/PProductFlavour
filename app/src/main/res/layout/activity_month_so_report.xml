<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/so_month_report_tbl_spinner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:padding="4dp"
        android:layout_marginTop="2dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:background="@drawable/border_label"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/so_month_report"
                android:textAppearance="@style/MyLabel" />

            <Spinner
                android:id="@+id/so_month_report_spn_month_year"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_weight="0.2"
                android:background="@drawable/spinner_simple"/>

        <!--</TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">-->

            <TextView
                android:id="@+id/textView41"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_label"
                android:text="SO Name :"
                android:layout_marginLeft="4dp"
                android:textAppearance="@style/MyLabel" />

            <Spinner
                android:id="@+id/so_month_report_spn_so"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/spinner_simple" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/so_month_report_tbl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TableLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/so_month_report_rcv_lst"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3">

    </android.support.v7.widget.RecyclerView>
     <LinearLayout
        android:id="@+id/so_month_report_tbl_total"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:padding="2dp">
        </LinearLayout>

</LinearLayout>