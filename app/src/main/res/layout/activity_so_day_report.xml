<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="2"
    android:id="@+id/mainLayout"
    tools:context=".SoDayReportActivity">

    <TableLayout
        android:id="@+id/so_day_report_tbl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </TableLayout>

    <ScrollView
        android:layout_marginBottom="50dp"
        android:id="@+id/so_day_report_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_below="@+id/so_day_report_tbl_head">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




        </LinearLayout>




    </ScrollView>

        <ListView
            android:padding="2dp"
            android:visibility="gone"
            android:id="@+id/so_day_report_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/so_day_report_scroll"
            android:layout_above="@+id/so_month_report_tbl_total1"/>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/so_month_report_tbl_total1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:padding="2dp">


        </LinearLayout>

</RelativeLayout>
