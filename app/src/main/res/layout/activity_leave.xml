<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_leave"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context="com.salescube.healthcare.demo.LeaveActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--        <TextView
            android:text="Leave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textColor="@color/heading_text_color"
            android:background="@drawable/border_gray"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:textAllCaps="true" />-->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="From Date:"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView20"
                    android:textAppearance="@style/MyLabel"
                    android:gravity="fill_vertical"
                    android:background="@drawable/border_label" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:id="@+id/leave_date_from_date"
                    android:layout_weight="1"
                    android:background="@drawable/border_text_box_gray"
                    android:textAppearance="@style/MyLabel" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="To Date:"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView21"
                    android:textAppearance="@style/MyLabel"
                    android:gravity="fill_vertical"
                    android:background="@drawable/border_label" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/leave_date_to_date"
                    android:layout_weight="1"
                    android:ems="10"
                    android:background="@drawable/border_text_box_gray"
                    android:textAppearance="@style/MyLabel" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="Leave Type:"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView26"
                    android:textAppearance="@style/MyLabel"
                    android:gravity="fill_vertical"
                    android:background="@drawable/border_label" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/leave_spn_leave_type"
                    android:layout_weight="1"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:background="@drawable/spinner_simple" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="CO For:"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/leave_lbl_co_for"
                    android:textAppearance="@style/MyLabel"
                    android:background="@drawable/border_label" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:id="@+id/leave_date_co_for"
                    android:background="@drawable/border_text_box_gray"
                    android:layout_weight="1"
                    android:textAppearance="@style/MyLabel" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="Duration:"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView25"
                    android:textAppearance="@style/MyLabel"
                    android:gravity="fill_vertical"
                    android:background="@drawable/border_label" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/leave_spn_leave_duration"
                    android:layout_weight="1"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:background="@drawable/spinner_simple" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leave_btn_submit"
                android:layout_weight="1"
                android:background="@drawable/button_simple" />

            <Button
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leave_btn_cancel"
                android:layout_weight="1"
                android:background="@drawable/button_simple" />
        </LinearLayout>

        <Button
            android:id="@+id/leave_btn_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_simple"
            android:text="Leave Report" />

    </LinearLayout>
</RelativeLayout>
