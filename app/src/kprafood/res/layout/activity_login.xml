<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context="com.salescube.healthcare.demo.LoginActivity">

    <ImageView
        android:id="@+id/login_imgCompanylogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/icon_login"
        android:visibility="gone" />

    <TextView
        android:text="KpraFood Tea Test"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/login_tblLoginGroup"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:nestedScrollingEnabled="false"
        android:measureWithLargestChild="false"
        android:layout_centerVertical="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="@style/MyLabel"
                android:text="Login Name:"
                android:id="@+id/login_lblUserName"
                android:layout_column="0"
                android:labelFor="@id/login_lblUserName"
                android:textSize="18sp"
                android:background="@drawable/border_label" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login_txtUserName"
                android:layout_column="1"
                android:layout_weight="1"
                android:singleLine="true"
                android:background="@drawable/border_text_box_gray"
                android:layout_marginLeft="5dp"
                android:inputType="textPersonName"
                android:selectAllOnFocus="true" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="@style/MyLabel"
                android:text="Password:"
                android:id="@+id/login_lblPassword"
                android:layout_column="0"
                android:textSize="18sp"
                android:background="@drawable/border_label" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login_txtPassword"
                android:layout_column="1"
                android:layout_weight="1"
                android:inputType="textWebPassword"
                android:background="@drawable/border_text_box_gray"
                android:layout_marginLeft="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Login"
                android:id="@+id/login_btnLogin"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_column="0"
                android:layout_weight="1"
                android:background="@drawable/button_simple"
                android:textColor="@color/btnColor" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Developed by Pitambari DigitalCare"
        android:textSize="12sp" />

</RelativeLayout>

